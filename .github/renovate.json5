{
  "enabled": true,
  "extends": [
    "group:recommended",
    "workarounds:all"
  ],
  "repositories": ["gabrielfeo/kotlin-jupyter-libraries"],
  "branchPrefix": "renovate/",
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchDatasources": ["maven"],
      "registryUrls": [
        "https://repo.maven.apache.org/maven2/",
        "https://jitpack.io/"
      ]
    }
  ],
  // Dependencies that interpolate different property names, beyond
  // $v or $version, need their own matcher (RE2 regex)
  "regexManagers": [
    // for dependencies with no interpolated properties
    {
      "datasourceTemplate": "maven",
      "fileMatch": [".*\\.json"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\"(?<depName>[^\":\\$]+:[^\":\\$]+):(?<currentValue>[^\":\\$]+)\""
      ]
    },
    //
    // TODO All managers that should match multiple deps per file must be reverted
    //      back to 'any' strategy
    //
    // for dependencies that interpolate $version only
    {
      "datasourceTemplate": "maven",
      "fileMatch": [".*\\.json"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\"version\": ?\"(?<currentValue>.+?)\"",
        "\"(?<depName>[^\":\\$]+:[^\":\\$]+):\\$version\""
      ]
    },
    // for dependencies that interpolate $v only
    {
      "datasourceTemplate": "maven",
      "fileMatch": [".*\\.json"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\"v\": ?\"(?<currentValue>.+?)\"",
        "\"(?<depName>[^\":\\$]+:[^\":\\$]+):\\$v\""
      ]
    },
    // for deeplearning4j*.json, dependencies that interpolate $slf4j
    {
      "datasourceTemplate": "maven",
      "fileMatch": [
        "deeplearning4j.*\\.json"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\"slf4j\": ?\"(?<currentValue>.+?)\"",
        "\"(?<depName>.+?:.+?):\\$slf4j\""
      ]
    },
    // for deeplearning4j*.json, dependencies that interpolate $freemarker
    {
      "datasourceTemplate": "maven",
      "fileMatch": [
        "deeplearning4j.*\\.json"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\"freemarker\": ?\"(?<currentValue>.+?)\"",
        "\"(?<depName>.+?:.+?):\\$freemarker\""
      ]
    },
    // for deeplearning4j*.json, org.nd4j:nd4j-cuda-$cuda:$v
    {
      "datasourceTemplate": "maven",
      "fileMatch": [
        "deeplearning4j.*\\.json"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\"cuda\": ?\"(?<cuda>.+?)\"",
        "\"v\": ?\"(?<currentValue>.+?)\""
      ],
      "depNameTemplate": "org.nd4j:nd4j-cuda-{{{cuda}}}"
    },
    // for deeplearning4j*.json, org.nd4j:nd4j-cuda-$cuda-platform:$v
    {
      "datasourceTemplate": "maven",
      "fileMatch": [
        "deeplearning4j.*\\.json"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\"cuda\": ?\"(?<cuda>.+?)\"",
        "\"v\": ?\"(?<currentValue>.+?)\""
      ],
      "depNameTemplate": "org.nd4j:nd4j-cuda-{{{cuda}}}-platform"
    },
    // for deeplearning4j*.json, org.deeplearning4j:deeplearning4j-cuda-$cuda:$v
    {
      "datasourceTemplate": "maven",
      "fileMatch": [
        "deeplearning4j.*\\.json"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\"cuda\": ?\"(?<cuda>.+?)\"",
        "\"v\": ?\"(?<currentValue>.+?)\""
      ],
      "depNameTemplate": "org.deeplearning4j:deeplearning4j-cuda-{{{cuda}}}"
    },
    // for spark*.json, which interpolate $spark, $scala and $v
    {
      "datasourceTemplate": "maven",
      "fileMatch": [
        "spark.*\\.json"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "\"spark\": ?\"(?<spark>.+?)\"",
        "\"scala\": ?\"(?<scala>.+?)\"",
        "\"v\": ?\"(?<currentValue>.+?)\""
      ],
      "depNameTemplate": "org.jetbrains.kotlinx.spark:jupyter_{{{spark}}}_{{{scala}}}"
    }
  ]
}
