{
  "enabled": true,
  "extends": [
    "group:recommended",
    "workarounds:all"
  ],
  "branchPrefix": "renovate/",
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchDatasources": ["maven"],
      "registryUrls": [
        "https://repo.maven.apache.org/maven2/",
        "https://jitpack.io/"
      ]
    }
  ],
  "regexManagers": [
    // for dependencies with no interpolated properties
    {
      "datasourceTemplate": "maven",
      "fileMatch": [".*\\.json5"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\"(?<depName>[^\":\\$]+:[^\":\\$]+):(?<currentValue>[^\":\\$]+)\""
      ]
    },
    // for dependencies that interpolate a property that is commented with "update: package=*"
    {
      "datasourceTemplate": "maven",
      "fileMatch": [".*\\.json5"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\/\/ update: package=(?<depName>\\S+)\\s+\".*?\": ?\"(?<currentValue>.+?)\"",
        "\/\/ update: package=(?<depName>\\S+)\\s+{\"name\": \".*?\", \"value\": \"(?<currentValue>.+?)\"",
      ]
    },
  ]
}
