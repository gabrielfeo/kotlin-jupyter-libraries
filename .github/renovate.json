{
  "enabled": true,
  "branchPrefix": "renovate/",
  "repositories": ["gabrielfeo/kotlin-jupyter-libraries"],
  "extends": [
    "group:recommended",
    "workarounds:all"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchDatasources": ["maven"],
      "registryUrls": [
        "https://repo.maven.apache.org/maven2/",
        "https://jitpack.io/"
      ]
    }
  ],
  "regexManagers": [
    {
      "datasourceTemplate": "maven",
      "fileMatch": [".*\\.json"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\"(?<depName>[^\":]+:[^\":]+):(?<currentValue>[^\":\\$]+)\""
      ]
    },
    {
      "datasourceTemplate": "maven",
      "fileMatch": [".*\\.json"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\"version\": ?\"(?<currentValue>.+?)\"[\\s\\S]*\"(?<depName>.+?:.+?):\\$version\""
      ]
    },
    {
      "datasourceTemplate": "maven",
      "fileMatch": [".*\\.json"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\"v\": ?\"(?<currentValue>.+?)\"[\\s\\S]*\"(?<depName>.+?:.+?):\\$v\""
      ]
    },
    {
      "datasourceTemplate": "maven",
      "fileMatch": [".*\\.json"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\"slf4j\": ?\"(?<currentValue>.+?)\"[\\s\\S]*\"(?<depName>.+?:.+?):\\$slf4j\""
      ]
    }
  ]
}
